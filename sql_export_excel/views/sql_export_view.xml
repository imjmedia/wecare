<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sql_export_excel_view_form" model="ir.ui.view">
        <field name="model">sql.export</field>
        <field name="inherit_id" ref="sql_export.sql_export_view_form"/>
        <field name="arch" type="xml">
            <field name="file_format" position="after">
                <field invisible="file_format == 'csv'" name="header"/>
                <field invisible="file_format != 'excel'" name="attachment_id"/>
                <field invisible="attachment_id == False" name="sheet_position"/>
                <field invisible="attachment_id == False" name="row_position"/>
                <field invisible="attachment_id == False" name="col_position"/></field></field>
    </record>
</odoo>
