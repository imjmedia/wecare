<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Customizing the Company Form View -->
    <record id="view_company_form_inherit_new" model="ir.ui.view">
        <field name="name">res.company.forminherited.new</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <!-- Adding so_double_validation and so_double_validation_amount fields after the favicon field -->
            <xpath expr="//field[@name='color']" position="after">
                <field name="so_double_validation"/>
                <field name="so_double_validation_amount"/>
            </xpath>
        </field>
    </record>

</odoo>

